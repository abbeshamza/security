extends layouti
block content
 h1 Login
 p Please login using the form below
  if(errors)
   each error, i in errors
    li.alert.alert-danger #{error.msg)
 form(method="post",action="/")
  .form-group
   label Username
   input.form-control(name='username',placeholder='enter your username',type='text')
  .form-group
   label Password
   input.form-control(name='password',placeholder='enter your password',type='password')
  input.btn.btn-default(name='submit',type='submit', value='Login')
